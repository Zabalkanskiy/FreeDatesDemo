<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/linearProgressIndicator"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:progress="17"
        app:indicatorColor="#77BA9E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="#E6E6E6" />

    <TextView
        android:id="@+id/first_dialog_basics"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/nunito_regular"
        android:text="The basics"
        android:textColor="#414244"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_dialog_seeking"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/a_avantebs_0"
        android:text="Your Name"
        android:textColor="#414244"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_dialog_basics" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/first_dialog_edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_edittext"
        android:fontFamily="@font/a_avantebs_0"
        android:hint="Name"
        android:paddingStart="16dp"
        android:textColor="#414244"
        android:textColorHint="#414244"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_dialog_seeking" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/first_dialog_edit_text_surname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_edittext"
        android:fontFamily="@font/a_avantebs_0"
        android:hint="Surname"
        android:paddingStart="16dp"
        android:textColor="#414244"
        android:textColorHint="#414244"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_dialog_edit_text_name" />

    <TextView
        android:id="@+id/first_dialog_text_view_user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/a_avantebs_0"
        android:text="Users will see your first name and first initial of your last name only."
        android:textColor="#414244"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_dialog_edit_text_surname" />

    <TextView
        android:id="@+id/second_dialog_your_city_text"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nunito_regular"
        android:text="Your Gender"
        android:textColor="#414244"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_dialog_text_view_user_text" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/four_screen_facebook_button"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_left_shape_fill"
        android:fontFamily="@font/a_avantebs_0"
        android:text="Male"
        android:textColor="#414244"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_dialog_your_city_text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/four_screen_camera_button"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_rigth_shape_out"
        android:fontFamily="@font/a_avantebs_0"
        android:text="Female"
        android:textColor="#414244"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/four_screen_facebook_button"
        app:layout_constraintTop_toBottomOf="@+id/second_dialog_your_city_text" />

    <ImageButton
        android:id="@+id/first_dialog_right_arrow"
        android:layout_width="46dp"
        android:layout_height="46dp"

        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/next"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="#D9D9D9"
        app:layout_constraintBottom_toTopOf="@+id/first_dialog_setting_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/first_dialog_setting_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:scaleType="centerCrop"

        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/settings_iconsetting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/first_dialog_time_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="16dp"

        android:background="@null"
        android:scaleType="centerCrop"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/icontime"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>